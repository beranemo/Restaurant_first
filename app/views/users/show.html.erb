<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1"> <!-- don't know meaning -->
      <!-- page-header 個人資料 -->
        <div id="page-header">
          <div id="col-md-6 col-sm-4" style="float:left">
            <div class="text-center">
              <%= image_tag @user.avatar , class: "img-responsive img-rounded" %>
            </div>
          </div>

          <div class="col-md-4 col-sm-6" style="float:right">
            <h2><%= @user.name %></h2>
            <p><strong><%= @user.email %></strong></p>
            <p><%= @user.intro %></p>
            <div><%= simple_format @user_intro  %>
              <% if @user.email == current_user.email %>
                <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
          <div class="clearfix"></div>

        </div>

        <br>
    </div>
  </div>
</div>