
<h1>餐廳評論網</h1>

<% @restaurants.each do |restaurant| %>
    <div>
      <%= image_tag restaurant.image %>
      <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
      <p><%= restaurant.category.name %><p>
      <p><%= truncate(restaurant.description, length: 80) %></p>
    </div>
<% end %>
